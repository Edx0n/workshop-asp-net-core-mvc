@model SalesWebMvc.Models.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">@ViewData["Title"].</h1>
<h2 class="text-danger">@Model.Message</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<h3>TheGoogleBoy can solve this!</h3>
<p>
    Swapping to <strong>TheGoogleBoy</strong> environment will display more detailed information about the error that occurred.
</p>

